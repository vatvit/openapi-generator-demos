{
    "name": "openapi-generator/slim-max-integration-tests",
    "description": "Integration tests for php-max generator with Slim templates",
    "type": "project",
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "respect/validation": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "TictactoeApi\\Api\\": "../../generated/php-max-slim/tictactoe/lib/Api/",
            "TictactoeApi\\Handler\\": "../../generated/php-max-slim/tictactoe/lib/Handler/",
            "TictactoeApi\\Model\\": "../../generated/php-max-slim/tictactoe/lib/Model/",
            "PetshopApi\\Api\\": "../../generated/php-max-slim/petshop/lib/Api/",
            "PetshopApi\\Handler\\": "../../generated/php-max-slim/petshop/lib/Handler/",
            "PetshopApi\\Model\\": "../../generated/php-max-slim/petshop/lib/Model/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "find ../../generated/php-max-slim -name '*.php' -exec php -l {} \\;",
        "test": "phpunit",
        "phpstan": "phpstan analyse --memory-limit=512M",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "analyse": [
            "@phpstan",
            "@phpcs"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": false
    }
}
