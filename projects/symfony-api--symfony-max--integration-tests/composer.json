{
    "name": "openapi-generator/symfony-max-integration-tests",
    "description": "Integration tests for php-max generator with Symfony templates",
    "type": "project",
    "require": {
        "php": "^8.2",
        "symfony/framework-bundle": "^7.0",
        "symfony/http-foundation": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/routing": "^7.0",
        "symfony/serializer": "^7.0",
        "symfony/validator": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "TictactoeApi\\Model\\": "../../generated/php-max-symfony/tictactoe/lib/Model/",
            "TictactoeApi\\Api\\": "../../generated/php-max-symfony/tictactoe/lib/Api/",
            "TictactoeApi\\Controller\\": "../../generated/php-max-symfony/tictactoe/lib/Controller/",
            "TictactoeApi\\Handler\\": "../../generated/php-max-symfony/tictactoe/lib/Handler/",
            "PetshopApi\\Model\\": "../../generated/php-max-symfony/petshop/lib/Model/",
            "PetshopApi\\Api\\": "../../generated/php-max-symfony/petshop/lib/Api/",
            "PetshopApi\\Controller\\": "../../generated/php-max-symfony/petshop/lib/Controller/",
            "PetshopApi\\Handler\\": "../../generated/php-max-symfony/petshop/lib/Handler/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "find ../../generated/php-max-symfony/tictactoe -name '*.php' -exec php -l {} \\;",
        "test": "phpunit",
        "phpstan": "phpstan analyse --memory-limit=512M",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "analyse": [
            "@phpstan",
            "@phpcs"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": false
    }
}
